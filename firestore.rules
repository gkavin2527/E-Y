
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Allow if the user's UID is in the admins collection
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /users/{userId} {
      allow read, create, update, delete: if isOwner(userId);
      allow list: if isAdmin(); // Only admins can list all users

      match /cart/{cartDoc} {
          allow read, write: if isOwner(userId);
      }

      match /addresses/{addressId} {
          allow read, list, create, update, delete: if isOwner(userId);
      }
    }

    match /products/{productId} {
      allow get, list: if true; // Everyone can view products
      allow create, update, delete: if isAdmin(); // Only admins can manage products

      match /reviews/{reviewId} {
        allow list, get: if true; // Everyone can read reviews
        // Allow create if user is signed in and the review is for them
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // Users cannot update or delete reviews from the client
        allow update, delete: if false;
      }
    }
    
    match /orders/{orderId} {
      // Allow a signed-in user to create an order for themselves
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Allow a user to get their own order, or an admin to get any order
      allow get: if (resource.data.userId == request.auth.uid) || isAdmin();
      
      // Allow a user to list THEIR OWN orders (by filtering on userId), or an admin to list ALL orders.
      allow list: if (request.query.get("userId") == request.auth.uid) || isAdmin();

      // No one can update or delete historical orders
      allow update, delete: if false;
    }
    
    match /admins/{userId} {
        // Anyone can read the admins collection to check for existence
        allow read: if true;
        // But no one can write to it from the client-side
        allow write: if false;
    }
  }
}

    