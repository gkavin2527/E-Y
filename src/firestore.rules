
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- Utility Functions ----------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Validates that a document with the userId exists in /admins
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ---------- USERS ----------
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn();
      allow list: if isAdmin(); // Only admins can list users

      // CART
      match /cart/{cartDoc} {
        allow read, write: if isOwner(userId);
      }

      // ADDRESSES
      match /addresses/{addressId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }
    }

    // ---------- PRODUCTS ----------
    match /products/{productId} {
      allow get, list: if true; // Public viewing allowed
      allow create, update, delete: if isAdmin();

      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if false;
      }
    }

    // ---------- ORDERS ----------
    match /orders/{orderId} {

      // USERS CAN ONLY CREATE THEIR OWN ORDER
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      // USERS CAN ONLY GET THEIR OWN ORDER, ADMINS GET ALL
      allow get: if (resource.data.userId == request.auth.uid) || isAdmin();

      // LISTING ORDERS:
      // - User can ONLY list their own orders (must use query where("userId", "==", uid))
      // - Admin can list ALL orders
      allow list: if (request.query.userId == request.auth.uid) || isAdmin();

      allow update, delete: if false; // Orders cannot be modified after creation
    }

    // ---------- ADMINS ----------
    match /admins/{adminId} {
      allow read: if true; // Anyone can check admin existence
      allow write: if false; // Prevent client-side edits
    }
  }
}
