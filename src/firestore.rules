rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- Utility Functions ----------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ---------- USERS ----------
    match /users/{userId} {
      allow read, create, update, delete: if isOwner(userId);
      allow list: if isAdmin();

      match /cart/{cartDoc} {
        allow read, write: if isOwner(userId);
      }

      match /addresses/{addressId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }
    }

    // ---------- PRODUCTS ----------
    match /products/{productId} {
      allow get, list: if true; // Public viewing allowed
      allow create, update, delete: if isAdmin();

      match /reviews/{reviewId} {
        allow list, get: if true;
        allow create: if isSignedIn() &&
          request.resource.data.userId == request.auth.uid;
        allow update, delete: if false;
      }
    }

    // ---------- ORDERS ----------
    match /orders/{orderId} {

      // User can create their own order
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // User can read their own orders; admin can read all
      allow get: if (resource.data.userId == request.auth.uid) || isAdmin();

      // LIST:
      // Firestore does NOT pass query filters to rules, so we cannot check userId here.
      // We allow list for all signed-in users, but "get" rule still restricts documents.
      allow list: if isAdmin() || isSignedIn();

      allow update, delete: if false;
    }

    // ---------- ADMINS ----------
    match /admins/{userId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
